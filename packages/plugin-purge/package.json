{
  "name": "vite-plugin-purge",
  "description": "Vite plugin to enable PurgeCSS for the build",
  "version": "0.0.0-development",
  "publishConfig": {
    "access": "public"
  },
  "author": "Beni Arisandi (https://stilearning.com)",
  "repository": "https://github.com/bent10/vite-plugins",
  "homepage": "https://github.com/bent10/vite-plugins/tree/packages/plugin-purge",
  "license": "MIT",
  "keywords": [
    "vite",
    "vite-plugin",
    "purgecss",
    "postcss"
  ],
  "type": "module",
  "exports": "./dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "readme.md",
    "license"
  ],
  "scripts": {
    "start": "npm run dev",
    "dev": "vite build --watch",
    "build": "vite build && npm run types",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "types": "tsc src/*.ts -d --emitDeclarationOnly --outDir ./dist && resolve-tspaths -o ./dist",
    "lint": "tsc --noEmit && eslint . --cache --cache-location .cache/eslint",
    "format": "prettier . --write --cache-location .cache/prettier --ignore-path ../../.prettierignore"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^5.0.0"
  },
  "peerDependencies": {
    "vite": ">=4.0.0"
  }
}
