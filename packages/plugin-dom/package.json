{
  "name": "vite-plugin-dom",
  "description": "Enables DOM manipulation and comment injection during the build process",
  "version": "0.0.0-development",
  "publishConfig": {
    "access": "public"
  },
  "author": "Beni Arisandi (https://stilearning.com)",
  "repository": "https://github.com/bent10/vite-plugins",
  "homepage": "https://github.com/bent10/vite-plugins/tree/main/packages/plugin-dom",
  "license": "MIT",
  "keywords": [
    "vite",
    "vite-plugin",
    "html",
    "htmlparser2",
    "dom",
    "domhandler",
    "domutils",
    "dom-serializer"
  ],
  "type": "module",
  "exports": "./dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "changelog.md",
    "readme.md"
  ],
  "scripts": {
    "start": "npm run dev",
    "dev": "vite build --watch",
    "build": "vite build && npm run types",
    "test": "vitest --ui",
    "coverage": "vitest run --coverage",
    "types": "tsc src/*.ts -d --emitDeclarationOnly --outDir ./dist && resolve-tspaths -o ./dist",
    "lint": "tsc --noEmit && eslint . --cache --cache-location .cache/eslint",
    "format": "prettier . --write --cache-location .cache/prettier --ignore-path ../../.prettierignore"
  },
  "dependencies": {
    "htmlparser2": "^8.0.2"
  },
  "peerDependencies": {
    "vite": ">=4.0.0"
  }
}
